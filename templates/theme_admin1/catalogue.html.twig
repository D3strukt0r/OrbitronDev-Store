{% extends 'theme_admin1/layout_admin.html.twig' %}

{% block breadcrumb %}
    <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
        <ul class="u-list-inline g-color-gray-dark-v6">

            <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-lightblue-v3--hover g-valign-middle" href="#!">{{ 'admin.page.catalogue.breadcrumb.shop'|trans }}</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
            </li>

            <li class="list-inline-item">
                <span class="g-valign-middle">{{ 'admin.page.catalogue.breadcrumb.product'|trans }}</span>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="g-pa-20">
        <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-40">{{ 'admin.page.catalogue.title'|trans }}</h1>
        <a href="{{ path('store_admin', {'store': current_store.url, 'page': 'create-product'}) }}" class="btn btn-success mb-2">{{ 'admin.page.catalogue.create'|trans }}</a>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>{{ 'admin.page.catalogue.table.name'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.sh_desc'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.lo_desc'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.price'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.sale_price'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.sm_image'|trans }}</th>
                    <th>{{ 'admin.page.catalogue.table.xl_image'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{% for language, item in product.names %}{{ language }} => {{ item }} |{% endfor %}</td>
                        <td>{% for language, item in product.shortDescriptions %}{{ language }} => {{ item }} |{% endfor %}</td>
                        <td>{% for language, item in product.descriptions %}{{ language }} => {{ item }} |{% endfor %}</td>
                        <td>{% for currency, item in product.prices %}{{ currency }} => {{ item }} |{% endfor %}</td>
                        <td>{% if product.salePrices is not null %}{% for currency, item in product.salePrices %}{{ currency }} => {{ item }} |{% endfor %}{% endif %}</td>
                        <td>{{ product.smallIcon }}</td>
                        <td>{% for image in product.images %}{{ image.image }} |{% endfor %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
