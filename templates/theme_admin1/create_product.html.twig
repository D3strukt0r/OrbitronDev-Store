{% extends 'theme_admin1/layout_admin.html.twig' %}

{% block breadcrumb %}
    <div class="g-hidden-sm-down g-bg-gray-light-v8 g-pa-20">
        <ul class="u-list-inline g-color-gray-dark-v6">

            <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-lightblue-v3--hover g-valign-middle" href="#!">{{ 'admin.page.vouchers.breadcrumb.shop'|trans }}</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
            </li>

            <li class="list-inline-item g-mr-10">
                <a class="u-link-v5 g-color-gray-dark-v6 g-color-lightblue-v3--hover g-valign-middle" href="{{ path('store_admin', {'store': current_store.url, 'page': 'catalogue'}) }}">{{ 'admin.page.catalogue.breadcrumb.product'|trans }}</a>
                <i class="hs-admin-angle-right g-font-size-12 g-color-gray-light-v6 g-valign-middle g-ml-10"></i>
            </li>

            <li class="list-inline-item">
                <span class="g-valign-middle">{{ 'admin.page.create_product.title'|trans }}</span>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="g-pa-20">
        <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-40">{{ 'admin.page.create_product.title'|trans }}</h1>
        <div class="row">
            <div class="col-md-5">
                {{ form_start(add_product_form, {'attr': {'class': 'card'}}) }}
                <div class="card-body">
                    {{ form_errors(add_product_form) }}

                    <div class="form-group row">
                        {{ form_label(add_product_form.name, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.name, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.name) }}</small>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(add_product_form.description, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.description, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.description) }}</small>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(add_product_form.short_description, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.short_description, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.short_description) }}</small>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(add_product_form.price, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.price, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.price) }}</small>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(add_product_form.sale_price, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.sale_price, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.sale_price) }}</small>
                        </div>
                    </div>

                    <div class="form-group row">
                        {{ form_label(add_product_form.stock, null, {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(add_product_form.stock, {'attr': {'class': 'form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3--focus g-rounded-4 g-px-14 g-py-10'}}) }}
                            <small class="form-text text-danger">{{ form_errors(add_product_form.stock) }}</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    {{ form_widget(add_product_form.send, {'attr': {'class': 'btn u-btn-blue'}}) }}
                </div>
                {{ form_end(add_product_form) }}
            </div>
        </div>
    </div>
{% endblock %}
